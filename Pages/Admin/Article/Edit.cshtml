@page
@using SkillTreeRazorPageBlogSample.Data
@model SkillTreeRazorPageBlogSample.Pages.Admin.Article.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Articles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Articles.Id" />
            <div class="form-group">
                <label asp-for="Articles.Title" class="control-label"></label>
                <input asp-for="Articles.Title" class="form-control" />
                <span asp-validation-for="Articles.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articles.Body" class="control-label"></label>
                <textarea asp-for="Articles.Body" class="form-control"></textarea>
                <span asp-validation-for="Articles.Body" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Articles.Tags" class="control-label"></label>
                <input asp-for="Articles.Tags" class="form-control"  value="@Model.Articles.Tags"/>
            </div>
            <div class="form-group">
                <label asp-for="CoverPhoto" class="control-label"></label>
                <input asp-for="CoverPhoto" class="form-control" type="file"/>
                <span asp-validation-for="CoverPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Articles.CreateDate" class="control-label"></label>
                <input asp-for="Articles.CreateDate" class="form-control datepicker" type="date"/>
                <span asp-validation-for="Articles.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <select class="form-control tags-select2" multiple="multiple" asp-for="Tags" asp-items="Model.Tags">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

